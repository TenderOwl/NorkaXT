<?xml version="1.0" encoding="UTF-8" ?>
<style-scheme id="norka-dark" _name="Norka Dark" version="1.0">
  <author>Andrey Maksimov</author>
  <description>Stay focused.</description>

  <metadata>
    <property name="variant">dark</property>
    <property name="light-variant">norka</property>
  </metadata>

  <style name="text" foreground="#C3C3C3" background="#1d252c00" />
  <style name="cursor" foreground="#287a82" />
  <style name="current-line" background="#4D4D4D" />
  <style name="search-match" foreground="#1d252c" background="#ffbb4a" />
  <style name="selection" foreground="#f7f7f7" background="#5299EA" />

  <!-- Bold -->
  <style name="def:statement" bold="true" />

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#7E8087" italic="true" />

  <!-- Links -->
  <style name="def:comment" foreground="#287a82" />
  <style name="def:underlined" foreground="#287a82" />

  <!-- Code -->
  <style name="def:identifier" foreground="#657e90" />

  <!-- Line-break -->
  <style name="def:note" foreground="#C3C3C1" />

  <!-- Label -->
  <style name="def:preprocessor" foreground="#C3C3C1" />

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#287a82" />
  <style name="def:constant" foreground="#287a82" />

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#7E8087" />

  <!-- Headers -->
  <style name="def:type" foreground="#C3C3C3" bold="true" />

  <!-- Markdown -->
  <style name="markdown:abbreviation" foreground="#575757" />
  <style name="markdown:blockquote-marker" foreground="#be6e7c" italic="true" />
  <style name="markdown:definition-list-marker" foreground="#FFFFFF" background="#575757" bold="true" />
  <style name="markdown:emphasis" italic="true" />
  <style name="markdown:header" foreground="#409aea" bold="true" />
  <style name="markdown:horizontal-rule" foreground="#409aea" bold="true" />
  <style name="markdown:label" bold="true" />
  <style name="markdown:list-marker" foreground="#C43E2C" bold="true" />
  <style name="markdown:strong-emphasis" bold="true" />
  <style name="markdown:table-separator" bold="true" />
  <style name="markdown:url" foreground="#678A00" underline="true" />
</style-scheme>
