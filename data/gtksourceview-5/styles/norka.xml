<style-scheme name="Norka" id="norka" version="1.0">
  <author>Andrey Maksimov</author>
  <description>Stay focused.</description>

  <metadata>
    <property name="variant">light</property>
    <property name="dark-variant">norka-dark</property>
  </metadata>
  
  <color name="Background" value="#f4f4f4"/>
  <color name="Foreground" value="#212121"/>
  <color name="Accent" value="#009ec9"/>
  <color name="Selection" value="#cdebf6"/>

  <style name="text" foreground="Foreground" background="Background" />
  <style name="cursor" foreground="#287a82" />
  <style name="current-line" background="#81B2EA" />
  <style name="search-match" foreground="#494F52" background="#ffbb4a" />
  <style name="selection" foreground="Foreground" background="Selection" />

  <!-- Bold -->
  <style name="def:statement" bold="true" />
  <style name="def:bracket-match" foreground="Accent" italic="true" />

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#555" italic="true" />

  <!-- Links -->
  <style name="def:comment" foreground="#888a85" />
  <style name="def:underlined" foreground="#0EBAFB" />

  <!-- Code -->
  <style name="def:identifier" foreground="#333" background="#eaeaea" />

  <!-- Line-break -->
  <style name="def:note" foreground="#333" />

  <!-- Label -->
  <style name="def:preprocessor" foreground="#333" />

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#C43E2C" />
  <style name="def:constant" foreground="#5299EA" />

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#B7B6B7" />

  <!-- Headers -->
  <style name="def:type" foreground="#333" bold="true" />

  <!-- Markdown -->
  <style name="markdown:abbreviation" foreground="#575757" />
  <style name="markdown:blockquote-marker" foreground="#b8bbbe" italic="true" />
  <style name="markdown:definition-list-marker" foreground="#FFFFFF" background="#575757" bold="true" />
  <style name="markdown:emphasis" italic="true" />
  <style name="markdown:header" foreground="Accent" bold="true" />
  <style name="markdown:horizontal-rule" foreground="Accent" bold="true" />
  <style name="markdown:label" bold="true" />
  <style name="markdown:list-marker" foreground="#C43E2C" bold="true" />
  <style name="markdown:strong-emphasis" bold="true" />
  <style name="markdown:table-separator" bold="true" />
  <style name="markdown:url" foreground="#678A00" underline="true" />
</style-scheme>
